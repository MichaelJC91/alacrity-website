    <div class="container-fluid contactFooter topPadding5P">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <h1 class="text-center">Ready to Start? Let's Talk! Coffee is on us!</h1>
          </div>
          <div class="col-md-12 topPadding50 bottomPadding100">
            <form action="/mail" method="POST">
              <div class="d-flex flex-wrap justify-content-between contactFormWrapper">
                <div class=" contactInput">
                  <input class="name" type="text" name="name" placeholder="Full Name*" required />
                </div>
                <div class="contactInput">
                  <input class="email" type="email" name="email" placeholder="Email*" required />
                </div>
                <div class="contactInput">
                  <input class="phone" type="tel" name="phone" placeholder="Phone Number*" required/>
                </div>
                <div class="contactInput">
                  <input class="subject" type="text" name="subject" placeholder="Subject*" required/>
                </div>
                <div class="fullWidth contactInput topPadding50">
                  <input class="fullWidth message" type="text" name="message" placeholder="Describe Your Project in a few Sentences" required/>
                </div>
                <div class="fullWidth topPadding30 bottomPadding20">
                  <button
                    class="g-recaptcha btn btn-primary contactFormButton textShadow"
                    data-sitekey="6LfMjxgUAAAAAPxcmMOl0Gb1P3QKyXDWDHegyiGg"
                    data-callback="onSubmit">
                    Submit
                  </button>
                </div>
                <div class="fullWidth text-center loader">
